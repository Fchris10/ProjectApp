            <Font size="10.0" />
         </font>
      </CheckBox>
      <Button fx:id="idLogin" layoutX="167.0" layoutY="399.0" mnemonicParsing="false" onAction="#onLoginClicked" prefHeight="40.0" prefWidth="65.0" style="-fx-background-color: white; -fx-border-color: gray;" text="LOGIN" />
      <Label fx:id="idVisiblePawd" layoutX="100.0" layoutY="274.0" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: gray;">
