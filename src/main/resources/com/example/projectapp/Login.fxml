   <children>
      <TextField fx:id="idUsername" layoutX="100.0" layoutY="196.0" prefHeight="40.0" prefWidth="200.0" style="-fx-border-color: gray;">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <Label layoutX="100.0" layoutY="178.0" text="Username">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="100.0" layoutY="257.0" text="Password">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <CheckBox fx:id="idCheckBox" layoutX="212.0" layoutY="327.0" mnemonicParsing="false" onAction="#onCheckBoxClicked" text="Show password">
