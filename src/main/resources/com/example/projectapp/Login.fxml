<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projectapp.Login">
   <children>
      <TextField fx:id="idUsername" layoutX="100.0" layoutY="196.0" prefHeight="40.0" prefWidth="200.0" style="-fx-border-color: gray;">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <Label layoutX="100.0" layoutY="178.0" text="Username">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="100.0" layoutY="257.0" text="Password">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <CheckBox fx:id="idCheckBox" layoutX="212.0" layoutY="327.0" mnemonicParsing="false" onAction="#onCheckBoxClicked" text="Show password">
         <font>
            <Font size="10.0" />
         </font>
      </CheckBox>
      <Button fx:id="idLogin" layoutX="130.0" layoutY="370.0" mnemonicParsing="false" onAction="#onLoginClicked" prefHeight="40.0" prefWidth="140.0" style="-fx-background-color: lightblue; -fx-border-color: gray;" text="LOGIN" />
      <PasswordField fx:id="idPassword" layoutX="100.0" layoutY="274.0" prefHeight="40.0" prefWidth="200.0" style="-fx-border-color: gray;">
         <font>
            <Font size="18.0" />
         </font>
      </PasswordField>
      <Label layoutX="77.0" layoutY="78.0" text="Welcome Back, ">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="77.0" layoutY="113.0" text="Sign in to continue">
         <font>
            <Font name="System Italic" size="10.0" />
         </font>
      </Label>
      <Label layoutX="154.0" layoutY="454.0" text="New user?">
         <font>
            <Font size="10.0" />
         </font>
      </Label>
      <Label fx:id="idSignupLabel" layoutX="212.0" layoutY="453.0" onMouseClicked="#onSignupLabelClicked" text="Signup" textFill="LIGHTBLUE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="idVisiblePawd" layoutX="100.0" layoutY="274.0" prefHeight="42.0" prefWidth="200.0" style="-fx-border-color: black; -fx-background-color: white;" visible="false">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
   </children>
</AnchorPane>
